FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    hub
    {
        type            zeroGradient;
    }

    shroud
    {
        type            zeroGradient;
    }

    inflow
    {
        type            fixedValue;
        value           uniform 0.184;
    }

    outflow
    {
        type            zeroGradient;
    }

    perio1
    {
        type            cyclic;
    }
}


